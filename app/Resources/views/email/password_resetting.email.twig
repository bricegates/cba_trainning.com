{% block body_text %}
    {% autoescape false %}
        Hello {{ user.username }} !

        You can reset your password by accessing {{ confirmationUrl }}

        Greetings,
        the App team
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% include 'email/header.html.twig' %}
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td style="padding:10px;">
                <span style="font-size:20px;font-weight:bold;font-family:Arial, Helvetica, sans-serif;">
                {% block subject %}Resetting your password{% endblock %}
            </span>
            </td>
        </tr>
        <tr>
            <td style="padding:10px;">
                Hello {{ user.firstname }} ! <br><br>
                You can reset your password by accessing {{ confirmationUrl }} <br><br>
                Greetings,<br>
                <b> The CBA TRAINNING team</b>
            </td>
        </tr>                                                
    </table>
    {% include 'email/footer.html.twig' %}
{% endblock %}