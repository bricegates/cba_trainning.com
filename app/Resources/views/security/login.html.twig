{% extends "base.html.twig" %}

{% block title %}Connexion - {{parent()}}{% endblock %}

{% block body %}
    <!-- Begin Page Header -->
    <div class="header">
        <div class="container">
            <div class="row">
                <!-- Page Title -->
                <div class="col-sm-2"></div>
                <div class="col-sm-4 col-xs-12">
                    <h1>REGISTER &amp; LOGIN</h1>
                </div>

                <!-- Breadcrumbs -->
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li><span class="ion-home breadcrumb-home"></span><a href="index.html">Home</a></li>
                        <li>Pages</li>
                        <li>Register &amp; Login</li>
                    </ol>
                </div><!-- /column -->  
            </div><!-- /row -->  
        </div><!-- /container -->  
    </div><!-- /page header -->  

</header><!-- /header -->
<!-- End Header -->

<!-- Begin Content -->
<div class="content-40mg">
    <div class="container">

        <div class="row">

            <!-- Begin Login -->
            <div class="col-sm-6">
                <div class="panel no-margin panel-default panel-primary">
                    <div class="panel-heading ">Login to your account</div>
                    <div class="panel-body">
                        <form role="form">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="ion-android-mail default_color" style="font-size:9px;"></span></div>
                                    <input class="form-control" type="email" placeholder="Enter email">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="ion-ios7-locked default_color"></span></div>
                                    <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
                                </div>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember me
                                </label>
                            </div>
                            <hr class="mb20 mt15">
                            <button type="submit" class="button button-glow button-rounded button-primary">Submit</button> &nbsp;&nbsp;&nbsp;<small><a href="{{ path('fos_user_resetting_request')}}">Forgot your password?</a></small>
                        </form><!-- /form -->
                    </div><!-- /panel body -->
                </div><!-- /panel -->
            </div><!-- /column-->
            <!-- End Login -->

            <!-- Image -->
            <div class="col-sm-6 mt30-xs">
                <div class="panel no-margin panel-default panel-primary">
                    <div class="panel-heading">.</div>
                    <div class="panel-body">
                        <img src="{{ asset ('img/projects/loginlock.png ')}}"  class="img-responsive"> 
                    </div><!-- /panel body -->
                </div><!-- /panel -->
            </div><!-- /column-->
            <!-- End Register -->

        </div><!-- /row -->

    </div><!-- /container -->
</div><!-- /content -->
<!-- End Content -->
{% endblock %}
